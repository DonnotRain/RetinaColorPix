<Window x:Class="RetinaColorPix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetinaColorPix"
        xmlns:colorPicker="clr-namespace:ColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="289" Icon="icon.ico">
    <Grid>
        <Border   BorderBrush="Black" BorderThickness="1">
            <colorPicker:ColorPicker 
      x:Name="ColorPicker"
      SelectedColor="White" Width="NaN"
      Padding="5" BorderBrush="Gray" BorderThickness="1" Background="Azure"
      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Height="110"/>
        </Border>
    </Grid>
</Window>
